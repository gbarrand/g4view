if [ "${use_exlib}" = "yes" ] ; then
  if [ "${exlib_home}" = "" ] ; then
    exlib_home=${bush_home}/../inexlib/exlib
  fi

  ccflags="${ccflags} -I${exlib_home}"

  cppflags="${cppflags} -I${exlib_home}"

fi

