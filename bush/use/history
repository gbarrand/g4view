if [ "${use_history}" = "yes" ] ; then
  if [ ${build_visual} = "yes" ] ; then
    echo 'bush/use/history : not found.'
    exit
  fi

  inc_dirs="/usr/include /opt/local/include"
  inc_to_find=readline/history.h
  . ${bush_home}/find_inc

  lib_dirs="/usr/${lib} /usr/lib/x86_64-linux-gnu /opt/local/lib"
  lib_to_find=history
  . ${bush_home}/find_lib
fi
