inline double inlib_random_flat_shoot(double /*aSeed*/) {
  // Shoot random numbers in [0,1] according a flat distribution.
  //FIXME srandom(aSeed);  
  double value  = (double)::rand();
  value /= (double)RAND_MAX;
  return value;
}
