#ifndef inlib_sep
#define inlib_sep

#include <string>

namespace inlib {

inline const std::string& sep() {
#ifdef _WIN32
  static const std::string s_v("\\");
#else
  static const std::string s_v("/");
#endif
  return s_v;
}

inline const std::string& psep() {
#ifdef _WIN32
  static const std::string s_v(";");
#else
  static const std::string s_v(":");
#endif
  return s_v;
}

inline const std::string& res_sep() {
  static const std::string s_v(".");
  return s_v;
}

}

#endif
