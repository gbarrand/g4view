#ifndef exlib_sg_pv_hoder_gl2ps
#define exlib_sg_pv_hoder_gl2ps

#include "text_freetype"

#include <inlib/sg/zb_action>
#include <inlib/sg/selection>

namespace exlib {
namespace sg {

class pv_holder_zb {
public:
  pv_holder_zb(std::ostream& a_out)
  :m_out(a_out)
  ,m_ttf()
  ,m_selection()
  {}
  virtual ~pv_holder_zb(){}
protected:
  pv_holder_zb(const pv_holder_zb& a_from)
  :m_out(a_from.m_out)
  ,m_ttf(a_from.m_ttf)
  ,m_selection(a_from.m_selection)
  {}
  pv_holder_zb& operator=(const pv_holder_zb& a_from) {
    m_ttf = a_from.m_ttf;
    m_selection = a_from.m_selection;
    return *this;
  }
public:
  inlib::sg::render_manager& gra_mgr() {return m_mgr_gra;}
  inlib::sg::base_freetype& ttf() {return m_ttf;}
  inlib::sg::selection& selection() {return m_selection;}
protected:
  std::ostream& m_out;
  text_freetype m_ttf;
  inlib::sg::selection m_selection;
  inlib::sg::zb_manager m_mgr_gra;
};

}}

//exlib_build_use inlib exlib freetype

#endif
