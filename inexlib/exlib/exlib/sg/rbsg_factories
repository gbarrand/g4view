#ifndef exlib_sg_rbsg_factories
#define exlib_sg_rbsg_factories

#include "text_freetype"
#include "text_freetype_marker"

#include <inlib/sg/bsg_factories>

namespace exlib {
namespace sg {

inline void add_factories(inlib::sg::bsg_factories& a_fac) {

  a_fac.add_factory<exlib::sg::text_freetype>();
  a_fac.add_factory<exlib::sg::text_freetype_marker>();

}

}}

//exlib_build_use inlib inlib_glutess freetype zlib

#endif
